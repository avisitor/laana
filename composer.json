{
  "require": {
    "elasticsearch/elasticsearch": "^8.13",
    "guzzlehttp/guzzle": "^7.9",
    "vlucas/phpdotenv": "^5.6",
    "nategood/httpful": "^0.3.2",
    "nlp-tools/nlp-tools": "dev-master",
    "avisitor/dbbase": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "Noiiolelo\\": "lib/",
      "Noiiolelo\\Providers\\": "providers/",
      "HawaiianSearch\\": "providers/Elasticsearch/src/",
      "Noiiolelo\\Tests\\": "tests/"
    }
  },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/avisitor/dbbase.git"
        }
    ],
  "scripts": {
    "test": "phpunit --configuration tests/phpunit.xml",
    "test-json": "phpunit --configuration tests/phpunit.xml --log-json tests/results.json",
    "post-install-cmd": [
      "@setup-ulukau"
    ],
    "post-update-cmd": [
      "@setup-ulukau"
    ],
    "setup-ulukau": [
      "cd db/ulukau && npm install",
      "mkdir -p db/ulukau/output"
    ]
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    },
    "audit": {
      "ignore": ["PKSA-4dtf-ym9h-t41j"]
    }
  }
}
