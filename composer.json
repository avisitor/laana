{
  "require": {
    "elasticsearch/elasticsearch": "^8.0",
    "guzzlehttp/guzzle": "^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "Noiiolelo\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit --configuration tests/phpunit.xml",
    "test-json": "phpunit --configuration tests/phpunit.xml --log-json tests/results.json",
    "post-install-cmd": [
      "@setup-ulukau"
    ],
    "post-update-cmd": [
      "@setup-ulukau"
    ],
    "setup-ulukau": [
      "cd db/ulukau && npm install",
      "mkdir -p db/ulukau/output"
    ]
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  }
}
