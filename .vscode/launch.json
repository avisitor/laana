{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [


        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003
        },
       {
          "name": "Debug test_processText.php",
        "type": "php",
        "request": "launch",
        "program": "${workspaceFolder}/scripts/test_processText.php",
        "args": ["15337"],
        "cwd": "${workspaceFolder}",
        "port": 9003,
        "runtimeExecutable": "/opt/local/bin/php82",
            "runtimeArgs": [
                "-dxdebug.start_with_request=yes"
            ],
            "env": {
                "XDEBUG_MODE": "debug,develop",
                "XDEBUG_CONFIG": "client_port=${port}"
            }
        },
       {
          "name": "Debug test.php",
        "type": "php",
        "request": "launch",
        "program": "${workspaceFolder}/scripts/test.php",
        "args": [],
        "cwd": "${workspaceFolder}",
        "port": 9003,
        "runtimeExecutable": "/opt/local/bin/php82",
            "runtimeArgs": [
                "-dxdebug.start_with_request=yes"
            ],
            "env": {
                "XDEBUG_MODE": "debug,develop",
                "XDEBUG_CONFIG": "client_port=${port}",
                "XDEBUG_SESSION": "1"
            }
        },
       {
        "name": "Debug savedocument.php",
        "type": "php",
        "request": "launch",
        "program": "${workspaceFolder}/scripts/savedocument.php",
        "args": [
                "--parser",
                "kaulanapilina",
            ],
        "cwd": "${workspaceFolder}",
        "port": 9003,
        "runtimeExecutable": "/opt/plesk/php/8.3/bin/php",
        "env": {
              // Simply set the mode, Xdebug will read client_host/port from php.ini
              "XDEBUG_MODE": "debug" 
            }
        },
        {
            "name": "Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 0,
            "runtimeArgs": [
                "-dxdebug.start_with_request=yes"
            ],
            "env": {
                "XDEBUG_MODE": "debug,develop",
                "XDEBUG_CONFIG": "client_port=${port}"
            }
        },
        {
            "name": "Launch Built-in web server",
            "type": "php",
            "request": "launch",
            "runtimeArgs": [
                "-dxdebug.mode=debug",
                "-dxdebug.start_with_request=yes",
                "-S",
                "localhost:0"
            ],
            "program": "",
            "cwd": "${workspaceRoot}",
            "port": 9003,
            "serverReadyAction": {
                "pattern": "Development Server \\(http://localhost:([0-9]+)\\) started",
                "uriFormat": "http://localhost:%s",
                "action": "openExternally"
            }
        }
    ]
}