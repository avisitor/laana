{
    "pepeke_aike_he": {"regex": "^He\\s+[\\wāēīōūʻ]+\\s+", "signature": "HE + KIKINO"},
    "pepeke_aike_o": {"regex": "^ʻ?O\\s+[\\wāēīōūʻ]+\\s+[\\wāēīōūʻ]+", "signature": "O + NAME"},
    "kalele_kulana": {"regex": "^(Ma|I|No|Ma muli o)\\s+[^.,?!;:\\\"]*?\\s+ai[\\s,.]", "signature": "PREP_FRONTING + AI"},
    "pepeke_henua": {"regex": "\\b[aA]ia\\s+", "signature": "AIA + LOCATIVE"},
    "kalele_akena": {"regex": "^Na\\s+[\\wāēīōūʻ]+\\s+i\\s+", "signature": "NA + ACTOR + I + VERB"},
    "hiki_infinitive": {"regex": "^Hiki\\s+[^.,?!;:\\\"]*?\\s+ke\\s+[\\wāēīōūʻ]+", "signature": "HIKI + KE"},
    "hoole_pepeke": {"regex": "^ʻ?Aʻ?ole\\s+", "signature": "AAOLE (NEGATIVE)"},
    "pepeke_painu_ana": {"regex": "^E\\s+.*?\\s+ana", "signature": "E + VERB + ANA (FUTURE/CONT)"},
    "dir_la_no_ia": {"regex": "[\\s,](mai|aku|iho|aʻ?e)\\s*la\\s+n[oō]\\s+ia", "signature": "DIRECTIONAL + LA NO IA"},
    "pepeke_painu": {"regex": "^(Ua|E|Ke|I)\\s+[\\wāēīōūʻ]+", "signature": "TENSE + VERB"},
    "hoole_pepeke_painu": {"regex": "^ʻ?Aʻ?ole\\s+(i|e)\\s+", "signature": "AAOLE + I/E"},
    "hoole_pepeke_aike_o": {"regex": "^ʻ?Aʻ?ole\\s+ʻ?o\\s+", "signature": "AAOLE + O"},
    "hoole_pepeke_aike_he": {"regex": "^ʻ?Aʻ?ole\\s+he\\s+", "signature": "AAOLE + HE"},
    "hoole_kalele_akena": {"regex": "^ʻ?Aʻ?ole\\s+na\\s+", "signature": "AAOLE + NA"},
    "aohe_existential": {"regex": "^ʻ?Aʻ?ohe\\s+", "signature": "AOHE (EXISTENTIAL NEG)"},
    "kalele_kumua": {"regex": "^Mai\\s+.*?\\s+mai", "signature": "MAI + ... + MAI"},
    "o_ka_v_dir_la": {"regex": "^ʻ?O\\s+(ka|ke)\\s+[^.,?!;:\\\"]*?\\s+(ala|mai|aku|iho|aʻ?e)\\s*la\\s+n[oō]\\s+ia", "signature": "O KA VERB DIR LA NO IA"},
    "i_loko_no_o": {"regex": "^I\\s+loko\\s+n[oō]\\s+o\\s+", "signature": "I LOKO NO O"},
    "pepeke_oi_aku": {"regex": "^ʻ?Oi\\s+aku\\s+", "signature": "OI AKU"},
    "pepeke_e_aho": {"regex": "^E\\s+aho\\s+", "signature": "E AHO"},
    "i_mea_e_painu_ai": {"regex": "^I\\s+mea\\s+e\\s+.*?\\s+ai\\b", "signature": "I MEA E ... AI"},
    "ma_ke_ano_he": {"regex": "\\bma\\s+ke\\s+ʻ?ano\\s+he\\b", "signature": "MA KE ANO HE"},
    "pepeke_nonoa": {"regex": "^He\\s+.*?\\s+(k[oō]|k[aā]|[oō]|[aā])\\s+", "signature": "HE ... KO/KA"}
}